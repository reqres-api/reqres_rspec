<html>
<head>
  <title><%= ReqresRspec.configuration.title %></title>
  <link href='http://fonts.googleapis.com/css?family=Droid+Sans:400,700' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Droid+Sans+Mono' rel='stylesheet' type='text/css'>
  <style>
    @page { size: 24.5cm 35cm } /* http://www.princexml.com/doc/9.0/page-size/ */

    body {
      color: #333333;
      font-family: 'Verdana', 'Droid Sans', sans-serif;
      font-size: 14px;
      padding: 15px;
      margin: 0;
    }
    body *{
      -webkit-box-sizing: border-box;
      -moz-box-sizing: border-box;
      box-sizing: border-box;
    }
    .container {
      padding: 0;
      width: 100%;
    }
    h1, h2, ol {
      margin: 0 20px 10px;
      padding: 0;
    }
    h1 {
      font-size: 2.286em;
    }
    h2 {
      font-size: 2em;
    }
    a {
      color: #1d96d2;
      text-decoration: none;
    }
    ol {
      counter-reset: item;
    }
    ol > li {
      counter-increment: item;
    }
    ol ol > li {
      display: block;
    }
    ol ol > li:before {
      content: counters(item, ".") ". ";
      margin-left: -20px;
    }

  </style>
</head>
<body>
<div class="container">
  <h1><%= ReqresRspec.configuration.title %></h1>
  <p>Generated <%= Time.now.strftime('%d %B %Y at %H:%m:%S')%> with <a href="https://github.com/reqres-api/reqres_rspec">reqres_rspec</a></p>
  <ol>
    <% @records.group_by { |x| x[:group] }.sort.each do |group, records| %>
      <li>
        <h3><%= group %></h3>
        <ol>
          <% records.each do |record| %>
            <li>
              <a href="rspec_doc_<%= record[:filename] %>.html">
                <%= record[:title] %>
              </a>
            </li>
          <% end %>
        </ol>
      </li>
    <% end %>
  </ol>
</div>
</body>
</html>
